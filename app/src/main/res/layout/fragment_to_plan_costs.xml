<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/spacing_largest_160"
    app:cardCornerRadius="@dimen/spacing_tiny_2"
    app:cardElevation="@dimen/spacing_scanty_4"
    android:layout_gravity="center"
    tools:context=".ui.fragments.ToPlanCostsFragment"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/spacing_largest_160"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/mintGreen"
    android:orientation="vertical"
    >

    <ru.bolshakova.shoppinglist.utils.CustomTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/spacing_medium_32"
        android:text="@string/to_plan_costs"
        android:gravity="center"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_big_64"
        android:layout_marginTop="@dimen/spacing_normally_24"
        android:orientation="horizontal">

     <EditText
        android:id="@+id/forInputSum"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="@dimen/spacing_large_40"
        android:gravity="bottom"
        android:focusable="true"
        android:inputType="number"
        android:textSize="14sp"
        android:textStyle="bold"/>

        <ru.bolshakova.shoppinglist.utils.CustomTextView
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="0.5"
            android:gravity="bottom"
            android:text="@string/rubles"
            android:textSize="14sp"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>
    </android.support.v7.widget.CardView>
