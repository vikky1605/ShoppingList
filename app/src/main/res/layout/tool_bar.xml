<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/AppTheme.AppBarOverlay"
    android:layout_width="match_parent"
    android:layout_height="@dimen/spacing_bigest_80"
    android:background="@drawable/red_lemon_header"
    android:elevation="@dimen/spacing_scanty_4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:fitsSystemWindows="true"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_normal_16"
        >

        <ru.bolshakova.shoppinglist.utils.CustomTextView
            android:id="@+id/header_to_plan"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:text="@string/week_costs"
            android:textSize="@dimen/spacing_normal_16"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/settings_buys"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more_vert_white_24dp"/>

        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_little_8"
        android:layout_marginLeft="@dimen/spacing_little_8"
        android:layout_marginRight="@dimen/spacing_little_8">

        <ImageView
            android:id="@+id/show_costs_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_visibility_white_24dp"
            />

        <ru.bolshakova.shoppinglist.utils.CustomTextView
            android:id="@+id/result"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="left"
            android:textSize="14sp"
            android:paddingLeft="@dimen/spacing_small_12"/>

        <ru.bolshakova.shoppinglist.utils.CustomTextView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:id="@+id/balanse"
            android:textSize="14sp"
            android:gravity="right"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingRight="@dimen/spacing_normal_16"
            />

        <ImageView
            android:id="@+id/to_plan_costs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit_white_24dp"
            android:layout_gravity="center"/>

    </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.Toolbar>