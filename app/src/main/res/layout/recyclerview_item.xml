<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/spacing_larger_60"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/spacing_tiny_2"
    app:cardElevation="@dimen/spacing_scanty_4"
    app:cardBackgroundColor="@color/mintGreen"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/card_buy_image"
            android:layout_width="0dp"
            android:layout_weight="0.20"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_normal_16"
            android:layout_gravity="left"
            android:src="@drawable/ic_shopping_basket_black_24dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_height="wrap_content"
            android:orientation="vertical">


    <TextView
        android:id="@+id/item_buy"
        style="@style/textView"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/spacing_scanty_4"
        android:layout_marginBottom="@dimen/spacing_scanty_4"
        android:layout_height="@dimen/spacing_normal_16"

        />

    <TextView
        android:id="@+id/amount_buy"
        style="@style/textView"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/spacing_scanty_4"
        android:layout_marginBottom="@dimen/spacing_scanty_4"
        android:layout_height="@dimen/spacing_normal_16"
        />

        </LinearLayout>


        <ImageView
            android:id="@+id/to_buy_card"
            android:layout_width="0dp"
            android:layout_weight="0.20"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more_horiz_black_24dp"/>

    </LinearLayout>

</android.support.v7.widget.CardView>